<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="30dp"
        tools:context=".Activities.UsersInfoActivity">

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:text="@string/users_info1"
            android:textAlignment="center"
            android:textColor="@color/color3"
            android:textSize="38dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/users_info2"
            android:textColor="@color/color2"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
            tools:layout_editor_absoluteX="25dp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/color3"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/localisationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/users_info3"
            android:textColor="@color/color2"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/localisationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/color3"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/localisationTextView"
            tools:layout_editor_absoluteX="47dp" />

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/users_info4"
            android:textColor="@color/color2"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/localisationEditText"
            tools:layout_editor_absoluteX="103dp" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/color3"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ageTextView"
            tools:layout_editor_absoluteX="47dp" />

        <TextView
            android:id="@+id/sexTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/users_info5"
            android:textColor="@color/color2"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/ageEditText"
            tools:layout_editor_absoluteX="34dp" />

        <Button
            android:id="@+id/confirmInfoButton"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button1"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:onClick="goToPrefOnClick"
            android:text="@string/okButton"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sexSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/sexTextView"
            android:checked="false"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/users_info7"
            android:textColor="@color/color3"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/switch1"
            app:layout_constraintTop_toBottomOf="@+id/sexTextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/users_info6"
            android:textColor="@color/color3"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/switch1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sexTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
