<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="30dp"
        tools:context=".UsersInfoActivity">

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:text="@string/users_info1"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="26dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Name:"
            android:textColor="@color/gray"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
            tools:layout_editor_absoluteX="25dp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Username:"
            android:textColor="@color/gray"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="161dp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameTextView"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/localisationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Localisation:"
            android:textColor="@color/gray"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameEditText"
            tools:layout_editor_absoluteX="25dp" />

        <EditText
            android:id="@+id/localisationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/localisationTextView"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Age:"
            android:textColor="@color/gray"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/localisationEditText"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="506dp" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/ageTextView"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/sexTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Sex:"
            android:textColor="@color/gray"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/ageEditText"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="556dp" />

        <EditText
            android:id="@+id/sexEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/sexTextView"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/preferencesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Preferences:"
            android:textColor="@color/gray"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/sexEditText"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="442dp" />

        <EditText
            android:id="@+id/preferencesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/preferencesTextView"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="305dp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/lavender_button"
            app:backgroundTint="@null"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/lime"
            android:textSize="26dp"
            android:layout_margin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/preferencesEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>